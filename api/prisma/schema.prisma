// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CustomerHealthChecklist {
  id          String   @id @default(cuid())
  customerId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  score       Int
  notes       String?
}
