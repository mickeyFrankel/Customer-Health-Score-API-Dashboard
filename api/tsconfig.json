{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "vitest"],
    "resolveJsonModule": true
  },
  "include": ["src", "tests", "vitest.config.ts"],
  "exclude": ["dist", "node_modules"]
}
