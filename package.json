{
  "name": "customer-health",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "api",
    "web",
    "infra"
  ],
  "scripts": {
    "build": "npm run build -w api && npm run build -w web",
    "dev": "echo \"Run package-specific dev scripts (npm run dev -w <package>)\"",
    "lint": "npm run lint -w api && npm run lint -w web",
    "lint:fix": "npm run lint:fix -w api && npm run lint:fix -w web",
    "test": "npm run test -w api && npm run test -w web",
    "format": "prettier --check \"**/*.{cjs,cts,mjs,mts,js,json,md,ts,tsx,yaml,yml}\"",
    "format:write": "prettier --write \"**/*.{cjs,cts,mjs,mts,js,json,md,ts,tsx,yaml,yml}\"",
    "lint:commits": "commitlint --from=HEAD~1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "is-extglob": "^2.1.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "vitest": "^1.6.1"
  }
}
